<!DOCTYPE html>
<html>
  <head>
    <title>CroKet</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    
      <nav class="navbar navbar-default navbar-static-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a> <%= link_to image_tag("croket_icon.png", alt: "logo", size:"42x42" ), '/', class: 'navbar-brand' %></a>
           
          
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="<%= 'active' if (current_page?(summary_path))%>"><%= link_to "Summary", summary_path %></li>
            <li class="<%= 'active' if (current_page?(budgets_path)||current_page?(new_budget_path)) %>"><%= link_to "Budgets", budgets_path %></li>
          </ul>
          <p class="navbar-text pull-right">
            <i class="glyphicon glyphicon-cog settingsicon"></i>
          </p>
        </div>
      </div>
    </nav>
      
    

    <div id="main-container" class="container">
        <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
        <% end %>
        <%= yield %>
    </div>
    <footer>
      <div class="footer">
         <%= link_to image_tag("animat-rocket.gif", {:style => "width:80px;"}), '/budgets/new' %>
         </br>
          Â© 2017 - CroKet. All Rights Reserved
      </div>
    </footer>
  </body>
</html>
