<div class="row">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <%= search_form_for @search do |f| %>
          <div class="input-group">
            <%= f.search_field:name_cont, class: 'form-control', placeholder: 'Search for...' %>
            <span class="input-group-btn">
              <%= f.submit "Search", class: 'btn btn-default' %>
            </span>
          </div>
        <% end %>
      </div>
      <div class="col-md-6"><span class="pull-right">
        <%= link_to new_budget_path, class: 'btn btn-primary round' do %>
          Create New Plan
        <% end %>
      </span></div>
    </div>
    
  </div>
  </div>
</br>


<div class="panel panel-default">
  <div class="panel-body">
    <% if @visible %>
    <div id="displayBudgets">
      <table class="table table-striped">
        <thead>
          <tr>
            <th class="col-xs-3">Plan Name</th>
            <th class="col-xs-2">Crop Year</th>
            <th class="col-xs-2">Commodity</th>
            <th class="col-xs-1">Acres</th>
            <th class="col-xs-2">Target Yield (bu/ac)</th>
            <th colspan="3" class="col-xs-3"></th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <td colspan="2"> <%= will_paginate @budgets %></td>
          </tr>
        </tfoot>
        <tbody>
          <% @budgets.each do |budget| %>
            <tr>
              <td><%= budget.name %></td>
                <td><%= budget.year.name %></td>
                <td><%= budget.crop.name %></td>
                <td><%= budget.totalacres %></td>
                <td><%= budget.targetyield %></td>
                <td>
                  
                <div class="btn-group btn-group-sm pull-right" role="group" aria-label="Basic example">
                  <%= link_to budget, class: 'btn btn-default' do %><i class="glyphicon glyphicon-file"></i>
                   
                  <% end %>
                  <%= link_to edit_budget_path(budget), class: 'btn btn-default' do %><i class="glyphicon glyphicon-pencil"></i>
                   
                  <% end %>
                  <%= link_to budget, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' do %><i class="glyphicon glyphicon-trash"></i>
                  
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <% else %>
      </br>
      <div id="EmptyBudgets" class="jumbotron">
        <div class="center">
          <div class="row">
            <div class="col-md-11"><h3>Make Your First Crop Budget!</h3>
              <h4>And  start the journey to boosting your farm profits right here...</h4></div>
            <div class="col-md-1"><span class="pull-right"><%= link_to image_tag("curved-arrow.png", {:style => "width:60px;"}), '/budgets/new' %></span></div>
          </div>
       </div>
      </div>
    <% end %>
  </div>
</div>



