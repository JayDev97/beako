<%= form_for(budget) do |f| %>
   <% if budget.errors.any? %>
     <div id="error_explanation">
       <h2><%= pluralize(budget.errors.count, "error") %> prohibited this budget from being saved:</h2>
 
       <ul>
       <% budget.errors.full_messages.each do |message| %>
         <li><%= message %></li>
       <% end %>
       </ul>
     </div>
   <% end %>
   <div class="panel panel-default">
        <div class="panel-body">
          <form role="form">
               <div class="col-sm-4">
                    <div class="form-group">
                     <%= f.label :"Budget name", class:"form-label" %>
                     <%= f.text_field :name, id: :budget_name,:required => true, class: "form-control" %>
                   </div>
                   <div class="form-group">
                         <%= f.label :year, class:"form-label" %>
                        <%= f.collection_select :year_id, Year.all, :id, :name,{}, {class: "form-control"} %>
                   </div>
                   <div class="form-group">
                         <%= f.label :crop, class:"form-label" %>
                        <%= f.collection_select :crop_id, Crop.all, :id, :name,{}, {class: "form-control"} %>
                   </div>
                   
                    <div class="btnfooter">
                        <%= f.submit :class => 'btn btn-success round' %>
                         <%= link_to 'Cancel', budgets_path, :class => 'btn btn-default round' %>
                    </div>
                    
                </div>
          </form>
      </div>
    </div>
  
 <% end %>