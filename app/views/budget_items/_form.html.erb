<%= form_for(budget_item) do |f| %>
  <% if budget_item.errors.any? %>
    <div id="error_explanation">
      <h4>Please fix the following <%= pluralize(budget_item.errors.count, "error") %> before saving:</h4>

      <ul>
      <% budget_item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="panel panel-default">
    <div class="panel-body">
      <form role="form">
        <div class="col-sm-5">
              <div class="form-group"> 
               <%= f.label :"Account", class:"form-label" %>
               <%= f.collection_select :account_id, Account.all, :id, :name_with_initial,{:prompt => 'Please select account type'}, {class: "form-control"} %>
            </div>
            <div class="form-group">
               <%= f.label :"Item Name", class:"form-label" %>
              <%= f.text_field :item, :required => true, class: "form-control" %>
            </div>
            <div class="form-group">
               <%= f.label :"Quantity", class:"form-label" %>
              <%= f.number_field :quantity, class: "form-control", :step => 0.10, :required => true  %>
            </div>
            <div class="form-group">
               <%= f.label :"Unit", class:"form-label" %>
               <%= f.collection_select :unit_id, Unit.all, :id, :name, {:prompt => 'Please select unit'}, {class: "form-control"} %>
            </div>
            <div class="form-group">
               <%= f.label :"Unit Price", class:"form-label" %>
              <%= f.number_field :price, class: "form-control", :step => 0.01, :required => true %>
            </div>
            <div class="form-group">
               <%= f.label :"Total", class:"form-label" %>
              <%= f.number_field :total, class: "form-control", :step => 0.01, :required => true, :step => 0.10  %>
            </div>
            <div class="form-group">
              <%= f.hidden_field :budget_id, :value => @parm_id , class: "form-control" %>
            </div>
            <div class="btnfooter">
                <%= link_to 'Cancel', budgets_path, :class => 'btn btn-default round' %>
                <%= f.submit :class => 'btn btn-primary round' %>
           </div>
        </div>
      </form>
    </div>
  </div>
  
 <% end %>
  

  
  

