<p id="notice"><%= notice %></p>

<h1>Plan Items</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Quantity</th>
      <th>Unit</th>
      <th>Price</th>
      <th>Total</th>
      <th>Budget</th>
      <th>Account</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @budget_items.each do |budget_item| %>
      <tr>
        <td><%= budget_item.item %></td>
        <td><%= budget_item.quantity %></td>
        <td><%= budget_item.unit_id %></td>
        <td><%= budget_item.price %></td>
        <td><%= budget_item.total %></td>
        <td><%= budget_item.budget_id %></td>
        <td><%= budget_item.account_id %></td>
        <td><%= link_to 'Show', budget_item %></td>
        <td><%= link_to 'Edit', edit_budget_item_path(budget_item) %></td>
        <td><%= link_to 'Destroy', budget_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

